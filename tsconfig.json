{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",

    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
